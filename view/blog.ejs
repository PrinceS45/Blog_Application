<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body class="d-flex flex-column min-vh-100">
    <%- include ('./partials/nav') %>
  
     <div class="container ">
         <h1><%= blog.title %></h1>
         <img src="<%= blog.coverImageUrl %>" width="700px" height="400px" alt="">
         <p class="mt-3"><%= blog.body %></p>
     </div>
       
     
     <div class="container mt-4">
         <div class="mx-3">Author</div>
        <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="50px"> <%= blog.createdBy.fullname  %>
     </div>
     <div class="container mt-3">

      <div class="container mt-2">
          <form action="/blog/<%= blog._id %>/like" method="POST" style="display:inline;">
  <button type="submit" class="btn btn-success mb-3">
    üëç Like (<%= blog.likes || 0 %>)
  </button>
</form>
      </div>

   <h3 class="mx-3">Comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
              <div class="container mt-2">
      <form action="/blog/comment/<%= blog._id %>" method = "post">
        <div class="mb-2 mt-3">
          
          <input type="text" name = "content" class="" id="" placeholder="Add your comment here">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div> 
    <% } %>

       <% comments.forEach(comment => { %>
           <div class="container mt-2">
                <img class="rounded-4" height="30px" width="30px" src="<%= comment.createdBy.profileImageURL %>" alt="">
                <span class="mx-2 text-dark fw-semibold"><%= comment.createdBy.fullname %></span>
                <div class="mx-5 small"><%= comment.content %></div>

               </div>

        <% }) %>
  </div>
     

  <footer class="text-center py-3 text-muted bg-light border-top w-100 mt-auto">
      <p class="mb-0">Created with ‚ù§Ô∏è by Prince Singh</p>
    </footer>
    <%- include ('./partials/script') %>

</body>
</html>